{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.ts$"],
      "matchStrings": [
        "(?<repo>github\\.com\\/LogisticsPet\\/terraform-aws-eks)\\?ref=(?<currentValue>[\\w\\d\\.\\-]+)"
      ],
      "datasourceTemplate": "git",
      "depNameTemplate": "{{{repo}}}",
      "versioningTemplate": "semver"
    }
  ]
}
