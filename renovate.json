{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.ts$"],
      "matchStrings": [
        "source:\\s*'github\\.com/(?<repo>[\\w-]+/[\\w-]+)\\?ref=(?<currentValue>[\\w\\d\\.\\-]+)'"
      ],
      "datasourceTemplate": "git",
      "depNameTemplate": "github.com/{{{repo}}}",
      "versioningTemplate": "semver"
    }
  ]
}
